
case $config_platform_branch in
    *-cec3|*-cec4)
        ;;
    *)
        exit
        ;;
esac

if [ -d $config_platform_install ]; then
    cd $config_platform_install
    git fetch --all
    git checkout master
    git reset --hard "origin/master"
    git clean -dfx
else
    git clone $config_platform_source_addr $config_platform_install
fi
